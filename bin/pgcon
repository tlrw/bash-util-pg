#!/usr/bin/env bash

__DIR__="$(dirname "${BASH_SOURCE[0]}")"

source "$(dirname "${__DIR__}")/src/pg.bash" || {
    echo "[!] Loading of pg.bash library failed." >&2

    exit 1
}

#

PGDATABASE="${PGDATABASE:-${POSTGRES_DB:-}}" && {
    [[ -n ${PGDATABASE} ]] && export PGDATABASE
}

main() {
    psql "$@"
}

main "$@"
