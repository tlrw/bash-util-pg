#!/usr/bin/env bash

if [[ "${BASH_VERSINFO[0]:-0}" -lt 4 ]]; then
    echo "pgbackup: requires Bash in version 4 or higher, current version: ${BASH_VERSION}"

    exit 1
fi

__SRC__="$(dirname -- "$(dirname -- "${BASH_SOURCE[0]}")")/src"

source "${__SRC__}/pgbackup.bash" || {
    echo "[!] Failed to load pgbackup.bash" >&2

    exit 1
}
