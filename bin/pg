#!/usr/bin/env bash

if [[ "${BASH_VERSINFO[0]:-0}" -lt 4 ]]; then
    echo "pgbackup: requires Bash in version 4 or higher, current version: ${BASH_VERSION}"

    exit 1
fi

__DIR__="$(dirname -- "${BASH_SOURCE[0]}")"

LIB="$(dirname -- "${__DIR__}")/lib"
SRC="$(dirname -- "${__DIR__}")/src"

source "${LIB}/tlrw/bash/src/std.bash" "cmd" && {
    inc_module "${SRC}/pg"
} || {
    exit 112
}

cmd_run "pg" "Facilitate work with PostgreSQL" "0.1.x" "$@"
